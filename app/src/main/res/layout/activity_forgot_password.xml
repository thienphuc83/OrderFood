<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ForgotPasswordActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/bg"/>

        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tvquenmatkhau"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quên mật khẩu"
                    android:textColor="@color/colorWhite"
                    android:textSize="50sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_marginTop="100dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"/>
                    <EditText
                        android:id="@+id/edtemailquenmatkhau"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"
                        android:inputType="textEmailAddress"
                        android:background="@drawable/custom_edittext"/>
                </LinearLayout>
                <ProgressBar
                    android:id="@+id/progressbarquenmatkhau"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    tools:targetApi="lollipop"
                    android:visibility="gone"
                    android:layout_margin="20dp"/>
                <info.hoang8f.widget.FButton
                    android:id="@+id/btnlaymatkhau"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="Lấy mật khẩu mới"
                    android:layout_marginTop="100dp"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    app:buttonColor="@color/colorButton" />
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvthongbaomatkhaumoi"
                        android:textSize="15sp"
                        android:textColor="@color/colorSilver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bạn sẽ nhận được một email để đặt lại mật khẩu"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>