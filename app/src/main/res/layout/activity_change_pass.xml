<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ChangePassActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/bg"/>

        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tvdoimatkhau"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đổi mật khẩu"
                    android:textColor="@color/colorWhite"
                    android:textSize="50sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_marginTop="80dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mật khẩu cũ"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"/>
                    <EditText
                        android:id="@+id/edtmatkhaucu"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"
                        android:inputType="textPassword"
                        android:background="@drawable/custom_edittext"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mật khẩu mới"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"/>
                    <EditText
                        android:id="@+id/edtmatkhaumoi"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"
                        android:inputType="textPassword"
                        android:background="@drawable/custom_edittext"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nhập lại mật khẩu"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"/>
                    <EditText
                        android:id="@+id/edtnhaplaimatkhau"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textSize="20sp"
                        android:inputType="textPassword"
                        android:background="@drawable/custom_edittext"/>
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progressbardoimatkhau"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    tools:targetApi="lollipop"
                    android:visibility="gone"
                    android:layout_margin="20dp"/>
                <info.hoang8f.widget.FButton
                    android:id="@+id/btndoimatkhau"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="Xong"
                    android:layout_marginTop="80dp"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    app:buttonColor="@color/colorButton" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>